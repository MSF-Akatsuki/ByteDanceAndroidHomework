<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/problem_section_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/cardview_default_elevation"
    android:layout_marginTop="15dp"
    card_view:cardCornerRadius="@dimen/cardview_default_radius"
    android:background="@drawable/main_item_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_margin="2dp"
            android:id="@+id/section_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textStyle="bold|italic"
            android:text="Test Section"
            />

        <TextView
            android:id="@+id/section_contents_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Test"
            />



    </LinearLayout>

</androidx.cardview.widget.CardView>